<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFEFE"
    tools:context=".Splash_Screen">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/tv_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/house"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:shadowColor="#33CBCB"
        android:text="Home"
        android:textColor="#FF33CBCB"
        android:textSize="64dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo" />

    <TextView
        android:id="@+id/tv_tSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#33CBCB"
        android:layout_marginStart="-80dp"
        android:text="Switch"
        android:textColor="#FF33CBCB"
        android:textSize="64dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_tHome"
        app:layout_constraintTop_toBottomOf="@+id/tv_tHome" />

</androidx.constraintlayout.widget.ConstraintLayout>