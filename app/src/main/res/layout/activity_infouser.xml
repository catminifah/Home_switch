<!--        android:textAllCaps="false"-->
<!--        android:textColor="#33CBCB"-->
<!--        android:textSize="20sp"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/imageView9"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_logout"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/s_bg_button_1"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="0dp"
        android:drawableTint="#33CBCB"
        android:gravity="left|center"
        android:padding="6dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#33CBCB"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/home5"
        app:layout_constraintBottom_toTopOf="@+id/img_email"
        app:layout_constraintStart_toStartOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/imageView14" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/message"
        app:layout_constraintBottom_toTopOf="@+id/img_key"
        app:layout_constraintStart_toStartOf="@+id/img_home"
        app:layout_constraintTop_toBottomOf="@+id/img_home" />

    <ImageView
        android:id="@+id/img_key"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/key"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/img_email"
        app:layout_constraintTop_toBottomOf="@+id/img_email" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Username : "
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/img_home"
        app:layout_constraintStart_toEndOf="@+id/img_home"
        app:layout_constraintTop_toTopOf="@+id/img_home" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <TextView
        android:id="@+id/tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Email : "
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/img_email"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        app:layout_constraintTop_toTopOf="@+id/img_email" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@email.com"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_mail"
        app:layout_constraintTop_toBottomOf="@+id/tv_mail" />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Reset password"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/img_key"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        app:layout_constraintTop_toTopOf="@+id/img_key" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_Reset"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/s_bg_button_1"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="#33CBCB"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pass"
        app:layout_constraintStart_toEndOf="@+id/tv_pass"
        app:layout_constraintTop_toTopOf="@+id/tv_pass" />

<!--    <ImageButton-->
<!--        android:id="@+id/bt_edit"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:background="@null"-->
<!--        android:layout_margin="20dp"-->
<!--        android:padding="10dp"-->
<!--        android:scaleType="fitXY"-->
<!--        android:src="@drawable/edit2"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/imageView9"-->
<!--        app:layout_constraintTop_toTopOf="@+id/imageView9" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button4"
        app:layout_constraintBottom_toTopOf="@+id/img_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_BG"
        android:gravity="center"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Box Switch"
            android:textColor="@color/white"
            android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_BoxSwitch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/openbox2"/>

            <TextView
                android:id="@+id/tv_BoxSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch off"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_Switch_off"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/light_off"/>

            <TextView
                android:id="@+id/tv_Switch_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch on"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_Switch_on"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/light_on"/>

            <TextView
                android:id="@+id/tv_Switch_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>